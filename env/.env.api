# ====================
# API Service Environment Variables
# ====================
# Specific to apps/api
# Extends .env.global

# ====================
# Server
# ====================
PORT=3001

# ====================
# Authentication
# ====================
# Generate with: openssl rand -base64 32
# Must be at least 32 characters
BETTER_AUTH_SECRET=2V6bRA7jXXP9dzUf2gCD4ClM29dpElsgzdHnKzt977U=
BETTER_AUTH_URL=http://localhost:3001

# ====================
# Email
# ====================
EMAIL_FROM=noreply@localhost.com

# Email Provider: 'console' or 'resend'
EMAIL_PROVIDER=console

# Resend API Key (required when EMAIL_PROVIDER=resend)
# Get yours at: https://resend.com/api-keys
# RESEND_API_KEY=re_xxxxxxxxxxxx

# ====================
# OpenAPI Documentation
# ====================
# Enable/disable API documentation endpoint
OPENAPI_ENABLED=true

# Include Better Auth routes in documentation
OPENAPI_INCLUDE_BETTER_AUTH_ROUTES=true
